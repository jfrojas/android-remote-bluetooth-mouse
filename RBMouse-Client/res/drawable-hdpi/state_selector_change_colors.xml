<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true"><shape>
            <stroke android:width="1dip" android:color="#1BA85D" />

            <solid android:paddingLeft="10dip" android:paddingTop="10dip" android:color="#D5E3DF" />

            <corners android:radius="2dp" />

            <padding android:bottom="10dip" android:left="10dip" android:right="10dip" android:top="10dip" />
        </shape></item>

    <!-- focused -->
    <item android:state_focused="true" android:color="#000000"><shape>
            <stroke android:width="1dip" android:color="#1BA85D" />

            <solid android:paddingLeft="10dip" android:paddingTop="10dip" android:color="#D5E3DF" />

            <corners android:radius="2dp" />

            <padding android:bottom="10dip" android:left="10dip" android:right="10dip" android:top="10dip" />
        </shape></item>

    <!-- default -->
    <item><shape>
            <solid android:paddingLeft="10dip" android:paddingTop="10dip" android:color="#FFFFFF" />

            <corners android:radius="2dp" />

            <padding android:bottom="10dip" android:left="10dip" android:right="10dip" android:top="10dip" />
        </shape></item>

</selector>